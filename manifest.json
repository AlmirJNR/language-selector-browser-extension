{
  "manifest_version": 2,
  "name": "Microsoft Learn Language Selector",
  "version": "0.3",
  "description": "Change your preferred language in microsoft learn easily",
  "homepage_url": "https://github.com/almirjnr/learn-microsoft-language-browser-extension",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "almirjnr@github.com"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true,
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.svg",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "./shared.mjs"
  ]
}