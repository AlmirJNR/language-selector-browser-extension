{
  "manifest_version": 2,
  "name": "Microsoft Learn Language Selector",
  "version": "0.5",
  "description": "Change your preferred language in microsoft learn easily",
  "homepage_url": "https://github.com/almirjnr/language-browser-extension",
  "icons": {
    "48": "src/icons/icon.svg",
    "96": "src/icons/icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "almirjnr@github.com"
    }
  },
  "background": {
    "scripts": [
      "src/background/background.js"
    ],
    "persistent": true,
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "src/icons/icon.svg",
    "default_popup": "src/popup/popup.html"
  },
  "web_accessible_resources": [
    "src/libs/urlHelper.mjs",
    "src/icons/icon.svg"
  ]
}